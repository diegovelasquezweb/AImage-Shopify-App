{% comment %} https://shopify.dev/apps/online-store/theme-app-extensions/extensions-framework {% endcomment %}
<section>
  <div style="background: {{ block.settings.colour }}">
    <h1>{{ page.title }}</h1>
    <h2>{{ block.settings.title }}</h2>
    <p>{{ block.settings.subtitle }}</p>
    {{ block.settings.product.title }}
  </div>
</section>
{% comment %} {% render 'app-snippet' %} {% endcomment %}
{% schema %}
  {
    "name": "[DEV] App Block",
    "target": "section",
    "stylesheet": "app.css",
    "javascript": "app.js",
    "settings": [
      {
        "label": "Colour",
        "id": "colour",
        "type": "color",
        "default": "#000000"
      }, {
        "label": "Title",
        "id": "title",
        "type": "text",
        "default": "Title"
      }, {
        "label": "Subtitle",
        "id": "subtitle",
        "type": "text",
        "default": "Subtitle"
      }, {
        "type": "product",
        "id": "product",
        "label": "Product"
      }
    ]
  }
{% endschema %}